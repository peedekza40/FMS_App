<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="code"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/report_code" android:layout_marginStart="21dp" android:textStyle="bold"
                android:textSize="18sp"/>
        <ImageButton
                android:id="@+id/image_button"
                android:layout_width="25dp" android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="4dp"
                android:maxLines="1"
                android:paddingEnd="4dp"
                android:layout_marginRight="6dp" android:background="@android:drawable/ic_menu_edit"/>
        <TextView
                android:id="@+id/report_Balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_button"
                android:layout_alignTop="@id/image_button"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                tools:text="Balance" android:layout_marginTop="27dp" android:layout_marginEnd="35dp"
                android:textStyle="bold" android:textSize="18sp" android:textColor="@android:color/black"/>
        <TextView
                android:id="@+id/report_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="detail"
                android:layout_below="@+id/report_code"
                android:layout_alignTop="@id/report_code"
                android:layout_toRightOf="@id/report_code"
                android:layout_marginLeft="-39dp"
                android:layout_marginTop="29dp" android:textSize="18sp" android:textStyle="bold"/>

        <TextView
                android:id="@+id/report_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="date"
                android:layout_below="@+id/report_detail"
                android:layout_alignTop="@id/report_detail"
                android:layout_toRightOf="@id/report_detail"

                android:layout_marginLeft="-46dp" android:layout_marginTop="31dp"/>
    </RelativeLayout>

