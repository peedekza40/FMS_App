<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="code"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/report_code"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/report_Balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_alignParentTop="true"
                tools:text="Balance"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="6dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>
        <TextView
                android:id="@+id/report_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="detail"
                android:layout_alignParentStart="false"
                android:layout_below="@+id/report_code"
                android:layout_alignTop="@id/report_code"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="6dp"
                android:textSize="14sp"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/report_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="date"
                android:layout_below="@+id/report_detail"
                android:layout_alignTop="@id/report_detail"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="6dp" android:textSize="14sp"/>
    </RelativeLayout>
</LinearLayout>