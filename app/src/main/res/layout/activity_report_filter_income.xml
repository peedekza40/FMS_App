<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Report.Report_Filter_income">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  tools:layout_editor_absoluteY="56dp"
                  tools:layout_editor_absoluteX="0dp"
                  android:orientation="vertical">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_gravity="center_horizontal"
                    android:text="ค้นหารายงานรายรับ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:id="@+id/Title_filter"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp">

                <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="เลือกบัญชีธนาคาร"
                        android:id="@+id/bac_list_inc"
                        android:layout_weight="1"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:ems="10"
                        android:id="@+id/input_date_start_inc" android:layout_weight="1" android:hint="วันที่เริ่ม"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:ems="10"
                        android:id="@+id/input_date_end_inc" android:layout_weight="1" android:hint="วันที่สิ้นสุด"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

            <LinearLayout
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:id="@+id/btn_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <Button android:id="@+id/button_search_inc"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:text="ค้นหา"
                        android:backgroundTint="@color/design_default_color_primary_dark"
                        android:textSize="18dp"
                        android:textColor="@color/mdtp_background_color"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

            </LinearLayout>
        </RelativeLayout>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/bac_id_spinner_inc"
                android:visibility="gone"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>