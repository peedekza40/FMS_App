<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Manage_base_data.BankAccount_detail">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="-1dp">
        <TextView
                android:text="ข้อมูลบัญชีธนาคาร"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_header3" android:layout_marginTop="20dp"
                android:textAlignment="center" android:textSize="18sp" android:textStyle="bold"/>
        <TextView
                android:text="หมายเลขบัญชี"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_bacNo" android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp" android:layout_marginTop="20dp" android:textAlignment="textStart"
                android:textSize="18sp"/>
        <TextView
                android:text="ชื่อบัญชี"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_bacName" android:layout_margin="20dp"
                android:textAlignment="textStart" android:textSize="18sp"/>
        <TextView
                android:text="ประเภทบัญชี"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_batName"
                android:textAlignment="textStart" android:textSize="18sp" android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp" android:layout_marginEnd="20dp"/>
        <TextView
                android:text="ธนาคาร"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_baName" android:textSize="18sp"
                android:layout_marginStart="20dp" android:layout_marginBottom="20dp" android:layout_marginEnd="20dp"/>
        <TextView
                android:text="สาขา"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_bacBranch" android:textSize="18sp"
                android:layout_marginStart="20dp" android:layout_marginBottom="20dp" android:layout_marginEnd="20dp"/>
        <TextView
                android:text="ยอดยกมา"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_bacBalance" android:textSize="18sp"
                android:layout_marginStart="20dp" android:layout_marginBottom="20dp" android:layout_marginEnd="20dp"/>
        <TextView
                android:text="ยอดสุดท้าย"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_bacCurBalance" android:textSize="18sp"
                android:layout_marginStart="20dp" android:layout_marginBottom="20dp" android:layout_marginEnd="20dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>