                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/header" android:layout_gravity="center|top"
                android:textSize="20sp" android:textStyle="bold"/>
        <RelativeLayout
                android:layout_below="@+id/linear_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:layout_marginStart="8dp" android:layout_alignParentTop="true" android:layout_marginTop="10dp"
