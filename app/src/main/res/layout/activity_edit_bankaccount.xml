<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Manage_base_data.Add_bankAccount">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:paddingLeft="20dp" android:paddingRight="20dp"
                      android:paddingTop="20dp" android:paddingBottom="10dp">
            <TextView
                    android:text="แก้ไขข้อมูลบัญชีเงินฝาก"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/text_bacAdd" android:textSize="18sp"
                    android:textStyle="bold" android:textAlignment="center" android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"/>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="รหัสบัญชี" android:id="@+id/text_bacId" android:inputType="number"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="เลขที่บัญชี" android:id="@+id/text_bacNo" android:inputType="textPersonName"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ZBANK" android:id="@+id/text_Zbank" android:inputType="textPersonName"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ชื่อบัญชีเงินฝาก" android:id="@+id/text_bacName"
                        android:inputType="textPersonName"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ประเภทเงินฝาก" android:id="@+id/text_batId" android:inputType="textAutoComplete"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ธนาคาร" android:id="@+id/text_baId" android:inputType="textAutoComplete"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ยอดยกมา" android:id="@+id/text_balance" android:inputType="number"/>
            </android.support.design.widget.TextInputLayout>
            <Button
                    android:text="บันทึก"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/save_btn" android:backgroundTint="#5CAF5E"
                    android:textColor="#FFFFFF" android:textSize="18sp" android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>