<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Manage_base_data.Bank_detail">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="ข้อมูลธนาคาร"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_header" android:textStyle="bold"
                android:textSize="18sp" android:textAlignment="center" android:layout_marginTop="20dp"/>
        <TextView
                android:text="ชื่อธนาคาร"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_baName" android:textAlignment="textStart"
                android:textSize="18sp" android:layout_marginTop="20dp" android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"/>
        <TextView
                android:text="ชื่อย่อธนาคาร"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_baCode" android:textAlignment="textStart"
                android:textSize="18sp" android:layout_margin="20dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>