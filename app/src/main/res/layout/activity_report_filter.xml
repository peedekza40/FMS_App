<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Report.Report_Filter">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  tools:layout_editor_absoluteY="56dp"
                  tools:layout_editor_absoluteX="0dp"
                  android:orientation="vertical">

        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

            <TextView android:id="@+id/account"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="สมุดบัญชีเงินฝาก : "
                      android:layout_alignParentTop="true"
                      android:layout_alignParentStart="true"
                      android:layout_marginRight="6dp"
                      android:layout_marginBottom="6dp"
                      android:layout_marginTop="50dp"
                      android:layout_marginStart="40dp"
                      android:layout_toStartOf="@+id/spinner_account"
                      android:layout_marginEnd="30dp"
                      android:textSize="18sp"
                      android:textAlignment="textEnd"/>

            <Spinner
                    android:id="@+id/spinner_account"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:paddingEnd="20dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="50dp"
                    android:spinnerMode="dropdown"
                    android:text="---กรุณาเลือก---"
                    android:textAlignment="center"/>

            <TextView android:id="@+id/date_start"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="ตั้งแต่วันที่ : "
                      android:layout_alignParentTop="true"
                      android:layout_alignParentStart="true"
                      android:layout_below="@+id/account"
                      android:layout_marginRight="6dp"
                      android:layout_marginBottom="6dp"
                      android:layout_marginStart="66dp"
                      android:layout_toStartOf="@+id/input_date_start"
                      android:layout_marginEnd="30dp"
                      android:layout_marginTop="116dp"
                      android:textSize="18sp"
                      android:textAlignment="textEnd"/>

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/input_date_start"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/spinner_account"
                    android:paddingEnd="20dp"
                    android:layout_marginRight="49dp"
                    android:layout_marginTop="110dp"
                    android:layout_marginEnd="50dp"
                    android:textAlignment="center"/>

            <TextView android:id="@+id/date_end"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="ถึง : "
                      android:layout_alignParentTop="true"
                      android:layout_alignParentStart="true"
                      android:layout_below="@+id/date_start"
                      android:layout_marginRight="6dp"
                      android:layout_marginBottom="6dp"
                      android:layout_marginStart="111dp"
                      android:layout_toStartOf="@+id/input_date_end"
                      android:layout_marginEnd="30dp"
                      android:layout_marginTop="187dp"
                      android:textSize="18sp"
                      android:textAlignment="textEnd"/>

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/input_date_end"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/spinner_account"
                    android:paddingEnd="20dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="180dp"
                    android:layout_marginEnd="50dp"
                    android:textAlignment="center"/>
        </RelativeLayout>

        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

            <Button android:id="@+id/search_btn"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:text="ค้นหา"
                    android:backgroundTint="@color/design_default_color_primary_dark"
                    android:textSize="24sp"
                    android:textColor="@color/mdtp_background_color"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="70dp"
                    android:textAlignment="center" android:textStyle="bold"/>
            <Button
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:id="@+id/cancle_search_btn"
                    android:text="ยกเลิก"
                    android:backgroundTint="#E91E1E"
                    android:textSize="24sp"
                    android:textColor="@color/mdtp_background_color"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="70dp"
                    android:textAlignment="center" android:textStyle="bold"/>

        </RelativeLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>