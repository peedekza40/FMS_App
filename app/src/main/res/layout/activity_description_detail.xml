<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Manage_base_data.Description_detail">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_header" android:text="ข้อมูลธนาคาร"
                android:textAlignment="center" android:textStyle="bold" android:textSize="18sp"
                android:layout_marginTop="20dp"/>

        <TextView
                android:text="ชื่อคำอธิบายรายการ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_desc_description" android:textSize="18sp"
                android:layout_marginStart="20dp" android:layout_marginLeft="20dp" android:layout_marginEnd="20dp"/>
        <TextView
                android:text="หมายเลขคำอธิบายรายการ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_desc_desid" android:textSize="18sp"
                android:layout_margin="20dp"/>
        <TextView
                android:text="รายรับ - รายจ่าย"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_desc_type" android:textSize="18sp"
                android:layout_marginEnd="20dp"  android:layout_marginStart="20dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>