<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/descId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="descId" android:layout_marginTop="15dp" android:layout_marginEnd="35dp"
                android:textSize="16sp"
                android:layout_marginStart="21dp" android:layout_marginBottom="15dp"/>
        <TextView
                android:id="@+id/descName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                tools:text="descName"
                android:layout_marginTop="15dp" android:textSize="16sp"
                android:layout_marginStart="21dp" android:layout_marginEnd="21dp"
        android:layout_marginBottom="15dp"/>

        <View
                android:layout_width="400dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
    </RelativeLayout>
</LinearLayout>