<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="code"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/descNo" android:layout_marginStart="21dp" android:textStyle="bold"
                android:textSize="18sp" android:layout_marginTop="15dp"/>
        <ImageButton
                android:id="@+id/pen_desc_btn"
                android:layout_width="25dp" android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="4dp"
                android:maxLines="1"
                android:paddingEnd="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp" android:background="@android:drawable/ic_menu_edit"/>
        <TextView
                android:id="@+id/descId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descNo"
                android:layout_alignTop="@id/descNo"
                tools:text="bacName" android:layout_marginTop="27dp" android:layout_marginEnd="35dp"
                android:textStyle="bold" android:textSize="18sp"
                android:layout_marginStart="21dp"/>
        <TextView
                android:id="@+id/descName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="baName"
                android:layout_below="@+id/descId"
                android:layout_alignTop="@id/descId"
                android:layout_marginTop="29dp" android:textSize="18sp" android:textStyle="bold"
                android:layout_marginStart="21dp"/>

        <TextView
                android:id="@+id/bacBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="date"
                android:layout_below="@+id/descName"
                android:layout_alignTop="@id/descName"
                android:layout_marginTop="31dp" android:textSize="18sp" android:textStyle="bold"
                android:layout_marginStart="21dp" android:layout_marginBottom="15dp"
                />
        <View
                android:layout_width="400dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
    </RelativeLayout>

