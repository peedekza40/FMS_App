<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/bacName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                tools:text="bacName" android:layout_marginTop="15dp" android:layout_marginEnd="35dp"
                android:textStyle="bold" android:textSize="18sp"
                android:layout_marginStart="21dp"/>

        <TextView
                android:id="@+id/baId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="baId"
                android:layout_below="@+id/bacName"
                android:layout_alignTop="@id/bacName"
                android:layout_marginTop="29dp" android:textSize="16sp"
                android:layout_marginStart="21dp" />
        <TextView
                android:text="bacBranch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/bac_branch"
                android:layout_below="@id/baId"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="21dp" android:layout_marginBottom="15dp"/>

        <View
                android:layout_width="400dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
    </RelativeLayout>

